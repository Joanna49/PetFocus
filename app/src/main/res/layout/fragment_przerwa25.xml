<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Przerwa25Fragment"
    android:background="@color/pomodoroBackground">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_Przerwa"
        android:layout_width="338dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Przerwa"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/text_odliczanie"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_below="@+id/text_Przerwa"
        android:layout_centerVertical="true"
        android:layout_marginTop="100dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnStart_Pauza"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_odliczanie"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/powitalnyBackground"
        android:text="Start"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart_Pauza"
        android:layout_marginStart="172dp"
        android:layout_marginTop="-49dp"
        android:layout_toEndOf="@+id/btnStart_Pauza"
        android:backgroundTint="@color/powitalnyBackground"
        android:text="Reset"
        android:textSize="20sp"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/Zegar"
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:layout_alignBottom="@+id/text_odliczanie"
        android:layout_marginBottom="-47dp"
        android:src="@drawable/baseline_radio_button_unchecked_24" />

    <Button
        android:id="@+id/btnPomodoroPowrot"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/Zegar"
        android:layout_marginTop="121dp"
        android:backgroundTint="@color/powitalnyBackground"
        android:text="PowrÃ³t do Pomodoro"
        android:textSize="20sp" />
</RelativeLayout>